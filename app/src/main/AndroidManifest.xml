<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mangaba.com.br.mangabatag" >

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".views.LoginView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.LessonsListView"
            android:label="MangabaTag"/>
        <activity
            android:name=".views.StudentCourseProgressView"
            android:label="MangabaTag"/>
        <activity android:name=".views.StudentsListView"
            android:label="MangabaTag"/>
        <activity android:name=".views.StudentProgressView"
            android:label="MangabaTag"/>

    </application>

</manifest>
